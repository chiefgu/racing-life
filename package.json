    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.56.1",
    "prettier": "^3.1.1"
  }
}
