{
  "dashboard": {
    "title": "Horse Racing Platform - Overview",
    "tags": ["horse-racing", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_http_requests_total[5m])) by (status_code)",
            "legendFormat": "{{ status_code }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "API Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(horse_racing_http_request_duration_seconds_bucket[5m])) by (le, route))",
            "legendFormat": "{{ route }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Odds Collection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_odds_collected_total[5m])) by (bookmaker)",
            "legendFormat": "{{ bookmaker }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Odds Collection Success Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_odds_collection_total{status=\"success\"}[5m])) by (bookmaker) / sum(rate(horse_racing_odds_collection_total[5m])) by (bookmaker)",
            "legendFormat": "{{ bookmaker }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "News Articles Collected",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_articles_collected_total[5m])) by (source)",
            "legendFormat": "{{ source }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Sentiment Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(horse_racing_sentiment_distribution_total) by (sentiment)",
            "legendFormat": "{{ sentiment }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "WebSocket Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "horse_racing_websocket_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "horse_racing_database_connections_active",
            "legendFormat": "Active"
          },
          {
            "expr": "horse_racing_database_connections_idle",
            "legendFormat": "Idle"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"backend\"} / (1024 * 1024)",
            "legendFormat": "Memory (MB)"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 }
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"backend\"}[5m]) * 100",
            "legendFormat": "CPU %"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 }
      },
      {
        "id": 11,
        "title": "OpenAI API Calls",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_openai_api_calls_total[5m])) by (operation, status)",
            "legendFormat": "{{ operation }} - {{ status }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 }
      },
      {
        "id": 12,
        "title": "OpenAI Cost (Hourly)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(horse_racing_openai_cost_usd_total[1h])) by (operation)",
            "legendFormat": "{{ operation }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 40 }
      },
      {
        "id": 13,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "horse_racing_cache_hit_rate",
            "legendFormat": "Hit Rate"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 48 }
      },
      {
        "id": 14,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "horse_racing_system_health",
            "legendFormat": "{{ component }}"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 48 }
      },
      {
        "id": 15,
        "title": "Affiliate Clicks",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(horse_racing_affiliate_clicks_total[5m])) by (bookmaker)",
            "legendFormat": "{{ bookmaker }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 48 }
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
