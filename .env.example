# Racing Life - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/racing_life
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=racing_life

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication & Security
# ============================================
# Generate a secure random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_required_here
JWT_EXPIRES_IN=7d

# ============================================
# External APIs
# ============================================
# Odds API
ODDS_API_KEY=your_odds_api_key_here

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password

# ============================================
# Error Tracking - Sentry
# ============================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ============================================
# Firebase (Push Notifications)
# ============================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ============================================
# Monitoring
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================
# Security Settings
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Key encryption key (32-byte hex string)
API_KEY_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# ============================================
# Feature Flags
# ============================================
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_NEWS_SCRAPING=true
ENABLE_API_DOCS=true

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Development Only
# ============================================
# Set to 'true' to enable detailed SQL query logging
DEBUG_SQL=false

# Enable API documentation in development
ENABLE_SWAGGER=true

# ============================================
# Production Only (set in production environment)
# ============================================
# SSL/TLS
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# CDN URL for static assets
# CDN_URL=https://cdn.yourdomain.com

# S3 or Object Storage
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key

# ============================================
# Testing Environment
# ============================================
# Used by test suites - create .env.test with these
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/racing_life_test
# REDIS_URL=redis://localhost:6379/1
# NODE_ENV=test
